---

import {Icon} from "astro-icon/components";

interface SkillCardProps {
    icons: [];
    name: string;    
}

const {
    icons,
    name,    
} = Astro.props as SkillCardProps;

---

<div class="flex flex-col gap-2 h-skill-icon bg-white dark:bg-n700 p-4 rounded-md">
    <div class="flex gap-4 h-10">
        {icons.map((icon) => {
            return <Icon width={40} height={40} name={icon} class="text-primary-light dark:text-primary-dark" />
        })}
    </div>
    <h3 class="text-lg font-bold">{name}</h3>    
</div>